# Some aspects of DRF

# views.py -> Request, Response, status
# Function baVsed view
@api_view(['GET', 'POST'])
def employee_list(request):
    if request.method == 'GET':
        emps = Employee.objects.all()
        ser = EmpSerializer(emps, many=True)
        return Response(ser.data)

    elif request.method == 'POST':
        ser = EmpSerializer(data=request.data)
        if ser.isValid():
            ser.save()
            return Response(ser.data, status=status.HTTP_201_CREATED)
        return Response(ser.errors, status=status.HTTP_400_BAD_REQUEST)

@api_view(['GET', 'PUT', 'DELETE'])
def employee_detail(request, pk):
    try:
        emp = Employee.objects.get(pk=pk)
    except Employee.DoesNotExist:
        return Response(status.HTTP_404_NOT_FOUND)

    if request.method == 'GET':
        ser = EmpSerializer(emp)
        return Response(ser.data)

    elif request.method == 'PUT':
        ser = EmpSerializer(emp, data=request.data)
        if ser.is_valid():
            ser.save()
            return Response(ser.data)
        return Response(ser.errors, status=status.HTTP_400_BAD_REQUEST)

    elif request.method == 'DELTE':
        emp.delete()
        return Response(status = status.HTTP_204_NO_CONTENT)

# models.py -> ORM
class Employee(models.Model):
    id = models.IntegerField(primary_key=True)
    name = models.CharField(max_length=28)
    salary = models.DecimalField(max_digits=10, decimal_places=3)

    def __str__(self):
        return self.id+self.name+self.salary

# serializers.py
class Employee(Serializers.ModelSerializer):
    class Meta:
        model=Employee
        fields=['id','name','salary']
# urls.py
urlpatterns = [
    path('admin/', admin.site.urls)
    path('emp/', views.employee_list)
    path('emp/<int:pk>', views.employee_detail)
]

